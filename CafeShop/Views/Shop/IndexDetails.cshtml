@{
    ViewData["Title"] = "Shop details";
    var accountId = ViewBag.Account.Id;
}

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="@ViewBag.Avatar.ImageUrl" alt="@ViewBag.Avatar.FileName" id="product-image">
                </div>
                <div class="row">
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="prev">
                            <i class="bi bi-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </div>
                    <!--End Controls-->
                    <!--Start Carousel Wrapper-->
                    <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                        <!--Start Slides-->
                        <!-- <div class="carousel-inner product-links-wap" role="listbox"> -->
                        <div class="carousel-item active">
                            <div class="row">
                                @foreach (var item in ViewBag.Image)
                                {
                                    <div class="col-4">
                                        <a href="#">
                                            <img class="card-img img-fluid" src="@item.ImageUrl" alt="@item.FileName" onclick="changeImage(event)">
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!--End Carousel Wrapper-->
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="next">
                            <i class="bi bi-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--End Controls-->
                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-8">
                                <h2>@ViewBag.Product.Name</h2>
                            </div>
                            <div class="col-4 text-end">
                                <p>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                </p>
                            </div>
                        </div>
                        @* <h1 class="h2">@ViewBag.Product.Name</h1> *@
                        <p class="h3 py-2" id="Price">@ViewBag.PriceDefault VNĐ</p>
                        @* <p class="py-2">
                        <i class="text-warning bi bi-star-fill"></i>
                        <i class="text-warning bi bi-star-fill"></i>
                        <i class="text-warning bi bi-star-fill"></i>
                        <i class="text-warning bi bi-star-fill"></i>
                        <i class="text-warning bi bi-star-fill"></i>
                        </p> *@


                        <form>
                            <input type="hidden" name="product-title" value="Activewear">
                            <div class="row">
                                <div class="col-auto">
                                    <ul class="list-inline pb-3">
                                        @foreach (var item in ViewBag.ProductSize)
                                        {
                                            <li class="list-inline-item"><a class="btn btn-success btn-size" ProductDetailsId="@item.ProductDetailsId" price="@item.Price" onclick="ChangeSize(event)">@item.Name</a></li>
                                        }
                                    </ul>
                                </div>
                                <div class="col-auto">
                                    <ul class="list-inline pb-3">
                                        <li class="list-inline-item text-right">
                                            Số lượng
                                            <input type="hidden" name="product-quanity" id="product-quanity" value="1">
                                        </li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                        <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                        <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row pb-3">
                                <div class="col-4"></div>
                                <div class="col-6">
                                    <button type="button" class="btn btn-success btn-lg" value="addtocard" onclick="AddCart(event)">Thêm vào giỏ hàng</button>
                                </div>
                                <div class="col-4"></div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Start Article -->
<section class="py-5">
    <div class="container">
        <div class="row text-left p-2 pb-3">
            <h4>Sản phẩm liên quan</h4>
        </div>

        <!--Start Carousel Wrapper-->
        <div id="carousel-related-product" class="row" style="text-align: center;">
            @foreach (var item in ViewBag.ProductRelated)
            {
                <div class="p-2 pb-3 col-3">
                    <div class="product-wap card rounded-0">
                        <div class="card rounded-0">
                            <img class="card-img rounded-0 img-fluid" src="@item.ImageUrl">
                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                <ul class="list-unstyled">
                                    <li><a class="btn btn-success text-white mt-2" asp-controller="Shop" asp-action="IndexDetails" asp-route-prId="@item.Id"><i class="bi bi-eye text-light"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" asp-controller="Shop" asp-action="IndexDetails" asp-route-prId="@item.Id"><i class="bi bi-cart-plus text-light"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <a asp-controller="Shop" asp-action="IndexDetails" asp-route-prId="@item.Id" class="h3 text-decoration-none">@item.Name</a>

                            <ul class="list-unstyled d-flex justify-content-center mb-1">
                                <li>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>
                                    <i class="text-warning bi bi-star-fill"></i>

                                </li>
                            </ul>
                            <p class="text-center mb-0">@item.Price.ToString("N0") VNĐ</p>
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>
</section>
<!-- End Article -->

<input type="number" id="product_id" value="@ViewBag.Product.Id" hidden />
<input type="number" id="account_id" value="@accountId" hidden />



<script src="~/js/client/productdetails.js"></script>